{
  "compilerOptions": {
    "esModuleInterop": true,
    "noImplicitAny": false,
    "skipLibCheck": true,         
    "experimentalDecorators": true, 
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "strict": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
